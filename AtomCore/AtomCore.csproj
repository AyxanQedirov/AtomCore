<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net9.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<PackageId>AtomCore</PackageId>
		<Version>3.5.0</Version>
		<Authors>Aykhan Gadirov</Authors>
		<Company>Aykhan Gadirov</Company>
		<Product>AtomCore</Product>
		<Description>This package contains core and shareable functionalities for .NET applications 🌍</Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageTags>core, api, common, shared, exception, handling</PackageTags>
		<RepositoryUrl>https://github.com/AyxanQedirov/Core</RepositoryUrl>
		<PackageIcon>logo.png</PackageIcon>
		<PackageReleaseNotes>- Added new extension for OpenAPI</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<Folder Include="ExceptionHandling\GrpcHandler\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="FluentValidation" Version="11.11.0" />
		<PackageReference Include="MediatR" Version="12.4.1" />
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Cors" Version="2.1.1" />
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.6" />
		<PackageReference Include="Microsoft.OpenApi" Version="1.6.24" />
		<PackageReference Include="StackExchange.Redis" Version="2.8.31" />
		<PackageReference Include="System.Linq.Dynamic.Core" Version="1.5.1" />
	</ItemGroup>

	<ItemGroup>
		<None Update="logo.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>
